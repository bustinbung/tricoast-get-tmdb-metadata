{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@api/*": ["src/api/*"]
    },
    "outDir": "dist"
  }
}
